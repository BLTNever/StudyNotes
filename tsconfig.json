{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      // "@/*": ["src/*"],
      // "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true,
    // "isolatedModules": true
  },
  "include": [
    "typings.d.ts",
    "bootstrap/**/*",
    "canvas/**/*"
    // "mock/**/*",
    // "src/**/*",
    // "config/**/*",
    // ".umirc.ts",
    // "./typings.d.ts",
    // "node_modules/@sm/plugin-ide-canvas/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests",
    "webpack.config.ts"
  ]
}
